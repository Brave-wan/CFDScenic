<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eff2f7" />

    <LinearLayout
        android:id="@+id/ll_shangpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9fafb"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_commodityY"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@mipmap/yuan_duigou_false" />

        <LinearLayout
            android:id="@+id/ll_ProductDetails"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_commodity"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/zhanwei" />

            <LinearLayout
                android:id="@+id/ll_false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_commodityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="曹妃甸"
                    android:textColor="@color/text_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_present"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥400"
                        android:textColor="@color/orange"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:text="￥100"
                        android:textColor="@color/text_gray" />

                    <TextView
                        android:id="@+id/tv_Number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x1" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@mipmap/jian" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="" />

                <ImageView
                    android:id="@+id/iv_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@mipmap/jia" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>