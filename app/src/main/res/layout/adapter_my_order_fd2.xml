<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E4EC" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_jiudian"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="40dp"
                    android:background="#eff2f7" />

                <ImageView
                    android:id="@+id/iv_jiudian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/yuan_duigou_false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="45dp"
                    android:background="#eff2f7" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_OrderNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_black"
                        android:text="订单号：" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eff2f7" />


                <com.demo.view.NoScrollViewListView
                    android:id="@+id/lv_listView"
                    android:divider="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.demo.view.NoScrollViewListView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#fff"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_qushiyong"
                        android:layout_width="80dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="15dp"
                        android:background="@mipmap/bt_yuanjiao_lanbian"
                        android:gravity="center"
                        android:text="去使用"
                        android:textColor="@color/blue" />

                    <TextView
                        android:id="@+id/tv_shenqing"
                        android:layout_width="80dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="15dp"
                        android:background="@mipmap/bt_yuanjiao_lan"
                        android:gravity="center"
                        android:text="申请退款"
                        android:textColor="#fff" />
                    <TextView
                        android:id="@+id/tv_shanchu"
                        android:layout_width="80dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="15dp"
                        android:background="@mipmap/bt_yuanjiao_lanbian"
                        android:gravity="center"
                        android:text="删除订单"
                        android:textColor="@color/blue" />
                    <TextView
                        android:id="@+id/tv_zaici"
                        android:layout_width="80dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="15dp"
                        android:background="@mipmap/bt_yuanjiao_lan"
                        android:gravity="center"
                        android:text="再次购买"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/tv_wancheng"
                        android:layout_width="80dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="15dp"
                        android:background="@mipmap/huiyuanjiao"
                        android:gravity="center"
                        android:text="交易完成"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#E0E4EC" />
</LinearLayout>