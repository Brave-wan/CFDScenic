<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_adp_home_gridview_pic"
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:scaleType="fitXY"
            android:src="@mipmap/zhanwei"/>
        <TextView
            android:id="@+id/iv_adp_home_gridview_rexiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热销"
            android:background="@mipmap/rexiao"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignBottom="@id/iv_adp_home_gridview_pic"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_below="@id/iv_adp_home_gridview_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/iv_adp_home_gridview_jieshao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="8dp"
                android:maxLines="2"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/iv_adp_home_gridview_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥00"
                    android:textColor="@color/ligntyellow"
                    android:paddingLeft="8dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/iv_adp_home_gridview_yuexiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="月销0笔"
                    android:layout_alignParentRight="true"
                    android:textSize="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>



</LinearLayout>