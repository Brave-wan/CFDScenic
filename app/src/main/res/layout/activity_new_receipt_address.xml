<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <com.demo.view.MyTopBar
        android:id="@+id/view_mytopBar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_centerTv="新增收货地址"
        app:tb_leftImClick="true"
        app:tb_leftImVisibility="true"
        app:tb_rightTvVisibility="true"
        app:tb_rightTv="保存"/>


    <LinearLayout
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/blue"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/et_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入姓名"
            android:background="#fff"
            android:maxLength="5"
            android:textColor="@color/text_black"
            android:textColorHint="@color/grayHint"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eff2f7" />

    <LinearLayout
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/blue"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/et_telphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入11位手机号"
            android:background="#fff"
            android:maxLength="11"
            android:inputType="number"
            android:textColor="@color/text_black"
            android:textColorHint="@color/grayHint"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eff2f7" />
    <LinearLayout
        android:id="@+id/ll_LocalArea"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="所在地区"
            android:textColor="@color/blue"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tv_placeAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请选择地区"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColorHint="@color/grayHint"
            android:textColor="@color/text_black"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/xiangyoujiantou" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eff2f7" />
    <LinearLayout
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textColor="@color/blue"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/et_DetailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="无需重复填写省市区/县"
            android:background="#fff"
            android:textColor="@color/text_black"
            android:textColorHint="@color/grayHint"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eff2f7" />
    <LinearLayout
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="邮政编码"
            android:textColor="@color/blue"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/et_postcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="选填"
            android:textColor="@color/text_black"
            android:background="#fff"
            android:inputType="number"
            android:textColorHint="@color/grayHint"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eff2f7" />




</LinearLayout>