<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijing"
    android:descendantFocusability="blocksDescendants">

    <com.demo.view.GradationScrollView
        android:id="@+id/sv_science"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_sciencemore_bigpic"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/zhanwei" />


                <Button
                    android:id="@+id/btn_science_tuji"
                    android:layout_width="45dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/iv_sciencemore_bigpic"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/tujibeijing"
                    android:text="图集"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_sciencemore_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_sciencemore_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:text="￥"
                    android:textColor="@color/ligntyellow" />

                <RelativeLayout
                    android:id="@+id/rl_sciencemore_opentime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_sciencemore_title"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_sciencemore_opentime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="100dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/theme" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/xiangyoujiantou" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_sciencemore_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/dingweixiao"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/dingweixiao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/dingweixiao"
                    android:text="地图导游"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/xiangyoujiantou" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f4"></LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_sciencemore_voice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/yuyinhei"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/yuyinhei" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/yuyinhei"
                    android:text="语音播报"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/iv_Broadcast"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/yuyin_kaishi" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_sciencemore_more"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_sciencemore_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="详情"
                        android:textColor="@color/blue" />

                    <TextView
                        android:id="@+id/tv_sciencemore_more_line"
                        android:layout_width="80dp"
                        android:layout_height="2dp"
                        android:background="@color/blue" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#eff2f7" />

                <LinearLayout
                    android:id="@+id/ll_sciencemore_arround"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_sciencemore_arround"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="周边"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_sciencemore_arround_line"
                        android:layout_width="80dp"
                        android:layout_height="2dp"
                        android:background="@color/blue"
                        android:visibility="invisible" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#eff2f7" />

                <LinearLayout
                    android:id="@+id/ll_sciencemore_mustknow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_sciencemore_mustknow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="须知"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_sciencemore_mustknow_line"
                        android:layout_width="80dp"
                        android:layout_height="2dp"
                        android:background="@color/blue"
                        android:visibility="invisible" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#eff2f7" />

                <LinearLayout
                    android:id="@+id/ll_sciencemore_connent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_sciencemore_connent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="评价"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_sciencemore_connent_line"
                        android:layout_width="80dp"
                        android:layout_height="2dp"
                        android:background="@color/blue"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f4" />

            <FrameLayout
                android:id="@+id/frag_sciencemore"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>
        </LinearLayout>
    </com.demo.view.GradationScrollView>


    <ImageView
        android:id="@+id/iv_aty_sciencemore_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:src="@mipmap/backhui" />

    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/lan_bk" />


        <TextView
            android:id="@+id/tv_goodTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="景区详情"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#00000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_bottomline"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#00f2f2f4" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_sciencemore_buyonline"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/blue"
        android:gravity="center"
        android:padding="10dp"
        android:text="在线购票"
        android:textColor="@color/white"
        android:textSize="17dp" />
</RelativeLayout>