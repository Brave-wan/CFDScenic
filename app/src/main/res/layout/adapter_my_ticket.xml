<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E4EC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_delete"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="37dp"
                android:background="#eff2f7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="45dp"
                android:background="#eff2f7" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/yuan_duigou_false" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_OrderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单号"
                    android:textColor="@color/text_black" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态"
                    android:textColor="@color/orange" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eff2f7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_ScenicSpot"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/zhanwei" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_ScenicSpotName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="景点名"
                        android:singleLine="true"
                        android:textColor="@color/text_black" />

                    <TextView
                        android:id="@+id/tv_youxiaoqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="截止日期："
                        android:textColor="@color/text_ShallowBlack"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总额："
                            android:textColor="@color/text_black" />

                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="@color/orange" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xiangyoujiantou" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eff2f7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_sqtk"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/bt_yuanjiao_lanbian"
                    android:gravity="center"
                    android:text="申请退款"
                    android:textColor="@color/blue"
                     />

                <TextView
                    android:id="@+id/tv_ckewm"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/bt_yuanjiao_lan"
                    android:gravity="center"
                    android:text="查看二维码"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/tv_qxdd"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/bt_yuanjiao_lanbian"
                    android:gravity="center"
                    android:text="取消订单"
                    android:textColor="@color/blue"
                     />
                <TextView
                    android:id="@+id/tv_scdd"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/bt_yuanjiao_lanbian"
                    android:gravity="center"
                    android:text="删除订单"
                    android:textColor="@color/blue"
                    />
                <TextView
                    android:id="@+id/tv_qzf"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/bt_yuanjiao_lan"
                    android:gravity="center"
                    android:text="去支付"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/tv_qpj"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/bt_yuanjiao_lan"
                    android:gravity="center"
                    android:text="去评价"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/tv_zcgm"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/bt_yuanjiao_lan"
                    android:gravity="center"
                    android:text="再次购买"
                    android:textColor="#fff" />
                <TextView
                    android:id="@+id/tv_ypj"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/huiyuanjiao"
                    android:gravity="center"
                    android:text="已评价"
                    android:textColor="#fff" />
                <TextView
                    android:id="@+id/tv_tkz"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/huiyuanjiao"
                    android:gravity="center"
                    android:text="退款中"
                    android:textColor="#fff" />
                <TextView
                    android:id="@+id/tv_tkcg"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/huiyuanjiao"
                    android:gravity="center"
                    android:text="退款成功"
                    android:textColor="#fff" />
                <TextView
                    android:id="@+id/tv_tksb"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/huiyuanjiao"
                    android:gravity="center"
                    android:text="退款失败"
                    android:textColor="#fff" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#E0E4EC" />
</LinearLayout>