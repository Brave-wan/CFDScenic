<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijing"
    android:orientation="vertical">

    <com.demo.view.MyTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_centerTv="订单详情"
        app:tb_leftImClick="true"
        app:tb_leftImVisibility="true"
        app:tb_rightTvVisibility="false" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_OrderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_black"
                    android:text="订单号：" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态"
                    android:textColor="@color/orange" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eff2f7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/iv_business"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/zhanwei" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_businessName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text_black" />

                        <TextView
                            android:id="@+id/tv_tcName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:text="" />

                        <TextView
                            android:visibility="invisible"
                            android:id="@+id/tv_youxiaoqi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:text="有效期：" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="总额："
                                android:textColor="@color/text_black" />

                            <TextView
                                android:id="@+id/tv_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/orange" />
                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:src="@mipmap/xiangyoujiantou" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/text_black"
                    android:text="订单详情" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eff2f7" />

                <TextView
                    android:id="@+id/tv_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_gray"
                    android:text="创建时间：" />

                <TextView
                    android:id="@+id/tv_paymentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_gray"
                    android:text="付款时间：" />

                <TextView
                    android:id="@+id/tv_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_gray"
                    android:text="支付方式：" />

                <TextView
                    android:id="@+id/tv_Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_gray"
                    android:text="数量：" />
                <TextView
                    android:id="@+id/tv_jiucan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_gray"
                    android:text="就餐时间：" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_gray"
                    android:text="联系电话：" />

                <TextView
                    android:id="@+id/tv_zonge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_gray"
                    android:text="总额：" />

                <TextView
                    android:id="@+id/tv_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_gray"
                    android:text="所获积分:" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eff2f7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv_shenqing"
                    android:layout_width="80dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/bt_yuanjiao_lanbian"
                    android:gravity="center"
                    android:text="申请退款"
                    android:textColor="@color/blue"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_yiguoqi"
                    android:layout_width="80dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/huiyuanjiao"
                    android:gravity="center"
                    android:text="已过期"
                    android:textColor="#fff"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_wancheng"
                    android:layout_width="80dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/huiyuanjiao"
                    android:gravity="center"
                    android:text="交易完成"
                    android:textColor="#fff"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/tv_shanchu"
                    android:layout_width="80dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="15dp"
                    android:visibility="gone"
                    android:background="@mipmap/bt_yuanjiao_lanbian"
                    android:gravity="center"
                    android:text="删除订单"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/tv_zaici"
                    android:layout_width="80dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/bt_yuanjiao_lanbian"
                    android:gravity="center"
                    android:text="再次购买"
                    android:textColor="@color/blue"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>