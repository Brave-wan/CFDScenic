<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijing"
    android:orientation="vertical">

    <com.demo.view.GradationScrollView
        android:id="@+id/svScience"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_aty_packagemore_img"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/zhanwei" />
                    <Button
                        android:id="@+id/btn_aty_packagemore_tuji"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_alignBottom="@+id/iv_aty_packagemore_img"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/tujibeijing"
                        android:text="图集"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_aty_packagemore_img"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/tv_aty_hotelmore_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:singleLine="true"
                                android:text="曹妃甸"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tv_aty_hotelmore_oedernow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="@mipmap/ordercheng"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="立即预订"
                                android:textColor="@color/white" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#eff2f7" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/dingweihui" />

                            <TextView
                                android:id="@+id/tv_aty_packagemore_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="30dp"
                                android:maxLines="2"
                                android:text="曹妃甸湿地文化旅游局,我们有多少时间能浪费,这里的夜景很有感觉"
                                android:textColor="@color/text_gray"
                                android:textSize="13dp" />

                            <ImageView
                                android:id="@+id/tv_aty_packagemore_call"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/dianhualan" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="套餐内容"
                                android:textColor="@color/blue"
                                android:textSize="15dp" />

                            <LinearLayout
                                android:id="@+id/ll_add"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#eff2f7" />

                        <com.demo.view.NoScrollViewListView
                            android:id="@+id/slv_aty_packagemore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </com.demo.view.NoScrollViewListView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="购买须知"
                                android:textColor="@color/blue"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#eff2f7" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <WebView
                                android:id="@+id/wv_aty_packagemore_mustknow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </com.demo.view.GradationScrollView>

    <ImageView
        android:id="@+id/iv_aty_sciencemore_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:src="@mipmap/backhui" />

    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/lan_bk" />


        <TextView
            android:id="@+id/tv_goodTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="饭店详情"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#00000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_bottomline"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#00f2f2f4" />
    </RelativeLayout>


</RelativeLayout>