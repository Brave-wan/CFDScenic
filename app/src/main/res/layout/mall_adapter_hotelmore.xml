<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_adp_hotelmore_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="经典大床房"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_adp_hotelmore_warn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:singleLine="true"
                android:text="入住当天12点前免费取消"
                android:textColor="@color/text_gray"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_adp_hotelmore_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="￥150"
                android:textColor="@color/blue"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_adp_hotelmore_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ordercheng"
            android:gravity="center"
            android:text="预订"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_adp_hotelmore_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/orderhui"
            android:gravity="center"
            android:text="预完"
            android:textColor="@color/white"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>