<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88323232"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:orientation="horizontal"
        android:layout_above="@+id/tv_xian"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_above="@+id/tv_Determine"
        android:background="#fff"
        android:orientation="vertical"></LinearLayout>

    <FrameLayout
        android:id="@+id/fl_Imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_xian"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="124dp"
            android:layout_height="84dp"
            android:scaleType="fitXY"
            android:src="@mipmap/baibian" />

        <ImageView
            android:id="@+id/iv_Imageview"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@mipmap/zhanwei" />
    </FrameLayout>


    <LinearLayout
        android:layout_toRightOf="@id/fl_Imageview"
        android:layout_above="@id/tv_xian"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥150"
            android:textColor="@color/orange"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择数量"
            android:textColor="@color/text_black" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_xian"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:layout_marginBottom="40dp"
        android:src="@mipmap/huicha" />

    <TextView
        android:id="@+id/tv_xian2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/tv_Determine"
        android:layout_marginBottom="50dp"
        android:background="#eff2f7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_xian2"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="购买数量"
            android:textColor="@color/text_black" />

        <LinearLayout
            android:id="@+id/ll_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_reduce"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/jian" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1" />

            <ImageView
                android:id="@+id/iv_plus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/jia" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_xian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/tv_Determine"
        android:layout_marginBottom="100dp"
        android:background="#eff2f7" />

    <TextView
        android:id="@+id/tv_Determine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/blue"
        android:gravity="center"
        android:padding="10dp"
        android:text="确定"
        android:textColor="#fff"
        android:textSize="18sp" />


</RelativeLayout>